"""scrape tool, Steam."""

from lxml import html
import requests

def engineid():
    """Search for keyword Unreal."""

    page = requests.get('http://store.steampowered.com/app/454830/?snr=1_7_7_230_150_14')
    tree = html.fromstring(page.content)
    aboutgame = str(tree.xpath('//div[@class="game_area_description"]/text()'))
    # converts HTML tree to searchable string
    
    if 'Unreal' in aboutgame:
        print('This game is made with Unreal Engine.')


engineid()
