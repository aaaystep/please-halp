"""This is a testing module so I can easily iterate.
"""
from lxml import html
import requests

#Ultimate goal is to be able to scrape text and find keywords.

def engineid():
    """Find the xpath of "About this Game" in the Steam store and print it in terminal.
    """
    page = requests.get('http://store.steampowered.com/app/454830/?snr=1_7_7_230_150_14')
    tree = html.fromstring(page.content)
    xpath = 'string(//div[@class=details_block]/)'
    #make xpath into a string so we can find substrings
    words = tree.xpath(xpath)
    print(words)

engineid()
